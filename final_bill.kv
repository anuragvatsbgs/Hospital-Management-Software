                    pos_hint: {"center_x": .95, "center_y": .1}
                    icon_size: "32sp"
                    on_release: app.creatte_bille()
                    md_bg_color: "green"
                    theme_text_color: "Custom"
                    text_color: "white"
                MDLabel:
                    text:"Hospital Management System"
                    font_style: 'H3'
                    font_name: "Comic"
                    pos_hint : {'center_x':0.5 ,'center_y':0.9}
                    size_hint: (0.8,0.1)
                    width: 500
                    halign:"center"
                MDLabel:
                    text:"PATIENT COPY"
                    font_style: 'H6'
                    font_name: "Comic"
