Screen:
    name: "FINAL_BILL"
    canvas.before:
        Rectangle:
            source:'images/q7.png'
            size: root.width, root.height
            pos: self.pos
    MDScreen:
        MDGridLayout:
            size_hint_y: 0.9
            cols: 1
            padding: [dp(0),dp(0),dp(0),dp(0)]
            spacing: dp(0)
            FloatLayout:
                MDIconButton:
