Screen:
    name: "PREPARE_BILL"
    canvas.before:
        Rectangle:
            source:'images/q7.png'
            size: root.width, root.height
            pos: self.pos
    MDScreen:
        MDBoxLayout:
            FloatLayout:
                MDTextField:
                    id:q_id2
                    hint_text: "Bed Charges"
                    helper_text:"forget"
                    pos_hint : {'center_x':0.5 ,'center_y':0.8}
                    width: 500
                    size_hint: (0.39,0.1)
                    helper_text: 'Required'
                MDTextField:
                    id:q_id3
                    hint_text: "Treatment Charges"
                    helper_text:"forget"
                    pos_hint : {'center_x':0.5 ,'center_y':0.7}
                    width: 500
                    size_hint: (0.39,0.1)
                    helper_text: 'Required'
                MDTextField:
                    id:q_id4
                    hint_text: "Other Charges"
                    helper_text:"forget"
                    pos_hint : {'center_x':0.5 ,'center_y':0.6}
                    width: 500
                    size_hint: (0.39,0.1)
                    helper_text: 'Required'



                MDRoundFlatIconButton:
                    text: "PREPARE BILL"
                    pos_hint: {'center_x':0.5 ,'center_y':0.4}
                    size_hint: (0.6,0.1)
                    on_press: app.final_pdf()
                    text_color: "white"
                    md_bg_color:96/255,125/255,139/255,1
                    width: 100
    MDScreen:
        FloatLayout:
            MDBoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    title: "Prepare Bill"
                    font_style: 'H5'
                    font_name: "Comic"
                    anchor_title: "left"
                    elevation: 0
                    left_action_items: [['arrow-left',lambda x: app.back_to_mainscreen()]]
                Widget: