Screen:
    name: "RES_SCREEN"
    canvas.before:
        Rectangle:
            source:'images/q7.png'
            size: root.width, root.height
            pos: self.pos
    MDScreen:
        FloatLayout:
            MDTextField:
                id:c_id
                hint_text: "Current Password"
                pos_hint: {'center_x':0.5 ,'center_y':0.7}
                width: 500
                size_hint: (0.7,0.11)
            MDTextField:
                id:c_id1
                hint_text: "New Password"
                pos_hint: {'center_x':0.5 ,'center_y':0.6}
                width: 500
                size_hint: (0.7,0.11)
            MDTextField:
                id:c_id2
                hint_text:"Confirm Password"
                pos_hint: {'center_x':0.5 ,'center_y':0.5}
                width: 500
                size_hint: (0.7,0.11)
            MDRoundFlatIconButton:
                text: "UPDATE"
                pos_hint: {'center_x':0.5 ,'center_y':0.3}
                size_hint: (0.8,0.1)
                on_press: app.res_password()
                text_color: "white"
                md_bg_color:96/255,125/255,139/255,1
                width: 100
    MDScreen:
        FloatLayout:
            MDBoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    title: "Reset Password"
                    font_style: 'H5'
                    font_name: "Comic"
                    anchor_title: "left"
                    elevation: 0
                    left_action_items: [['arrow-left',lambda x: app.back_to_screen()]]
                Widget:

