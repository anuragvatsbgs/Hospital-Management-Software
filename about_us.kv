Screen:
    name: "AboutUs"
    canvas.before:
        Rectangle:
            source:'images/q7.png'
            size: root.width, root.height
            pos: self.pos
    MDScreen:
        FloatLayout:
            AnchorLayout:
                anchor_x: "left"
                size_hint_y: None
                pos_hint : {'center_x':0.5 ,'center_y':0.75}
                height: avatar.height
                Image:
                    id: avatar
                    size: "120dp", "120dp"
                    source: "images/logo.png"
            MDLabel:
                text:"Mission"
                font_style: 'H5'
                font_name: "Comic"
                halign:"center"
                pos_hint : {'center_x':0.5 ,'center_y':0.60}
            MDLabel:
                text:"Our mission is to bring healthcare of International standards within the reach of every individual. We are committed to the achievement and maintenance of excellence in education, research and healthcare for the benefit of humanity."
                font_style: 'H6'
                font_name: "Comic"
                halign:"left"
                pos_hint : {'center_x':0.5 ,'center_y':0.50}
                size_hint: (0.8,0.1)
    MDScreen:
        FloatLayout:
            MDBoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    title: "About Us"
                    font_style: 'H5'
                    font_name: "Comic"
                    anchor_title: "left"
                    elevation: 0
                    left_action_items: [['arrow-left',lambda x: app.back_to_mainscreen()]]
                Widget:
