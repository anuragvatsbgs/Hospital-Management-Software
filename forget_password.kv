

Screen:
    name: "FORGET_SCREEN"
    canvas.before:
        Rectangle:
            source:'images/q7.png'
            size: root.width, root.height
            pos: self.pos
    MDScreen:
        MDBoxLayout:
            FloatLayout:
                MDLabel:
                    text:"FORGET PASSWORD"
                    font_style: 'H6'
                    font_name: "Comic"
                    pos_hint: {'center_x':0.5 ,'center_y':0.80}
                    halign:"center"
                    bold: True
                MDTextField:
                    id:s_id
                    hint_text: "Staff ID"
                    helper_text: 'forget'
                    pos_hint: {'center_x':0.5 ,'center_y':0.70}
                    width: 500
                    size_hint: (0.7,0.11)
                    helper_text: 'Required'
                MDTextField:
                    id:a_id
                    hint_text: "Aadhar Number"
                    helper_text: 'forget'
                    pos_hint: {'center_x':0.5 ,'center_y':0.60}
                    width: 500
                    size_hint: (0.7,0.11)
                    helper_text: 'Required'
                MDRoundFlatIconButton:
                    text: "GET PASSWORD"
                    pos_hint: {'center_x':0.5 ,'center_y':0.40}
                    size_hint: (0.8,0.1)
                    on_press: app.forget_password()
                    text_color: "white"
                    md_bg_color:96/255,125/255,139/255,1
                    width: 100
    MDScreen:
        FloatLayout:
            MDBoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    title: "Forget Password"
                    font_style: 'H5'
                    font_name: "Comic"
                    anchor_title: "left"
                    elevation: 0
                    left_action_items: [['arrow-left',lambda x: app.log_out()]]
                Widget:



