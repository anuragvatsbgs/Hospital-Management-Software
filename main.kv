Screen:
    name: "Main"
    MDBoxLayout:

    MDNavigationRail:

        MDNavigationRailItem:
            text: "Home"
            icon: "home"

        MDNavigationRailItem:
            text: "Add"
            icon: "account-multiple-plus"

        MDNavigationRailItem:
            text: "Update"
            icon: "update"

        MDNavigationRailItem:
            text: "Search"
            icon: "account-search"

        MDNavigationRailItem:
            text: "Discharge"
            icon: "account-card-outline"

        MDNavigationRailItem:
            text: "Prepare Bill"
            icon: "billboard"

        MDNavigationRailItem:
            text: "Delete"
            icon: "delete"

    MDScreen:
        FloatLayout:
            MDLabel:
                text: "HOSPITAL MANAGEMENT SYSTEM"
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": .95}
                font_style: 'H4'
                font_name: "Comic"
            MDIconButton:
                icon: "images/log_in.jpg"
                pos_hint: {"center_x": .95, "center_y": .95}  
                icon_size: "32sp"
                on_release: app.dot(self)
            MDBoxLayout:
                MDGridLayout:
                    size_hint_y:1.
                    cols:3
                    padding:[dp(100),dp(100),dp(10),dp(30)]
                    spacing:dp(25)
                    ElementCard:
                        image:"images/add_patient.png"
                        text:"Add Patient"
                        on_release: app.readinput()
                    ElementCard:
                        image:"images/update_patient.jpeg"
                        text:"Update Patient"
                        on_release: app.readinput()
                    ElementCard:
                        image:"images/search.jpeg"
                        text:"Search Patient"
                        on_release: app.readinput()
                    ElementCard:
                        image:"images/discharge.png"
                        text:"Discharge Patient"
                        on_release: app.readinput()
                    ElementCard:
                        image:"images/bill.png"
                        text:"Prepare Bill"
                        on_release: app.readinput()
                    ElementCard:
                        image:"images/delete.png"
                        text:"Delete Patient"
                        on_release: app.readinput()
                    ElementCard:
                        image:"images/blood.png"
                        text:"Donate Blood"
                        on_release: app.readinput()
                    
<ElementCard@MDCard>:
    md_bg_color:96/255,125/255,150/255,1
    padding:"8dp"
    spacing:"5dp"
    radius:[80,40,80,40]
    ripple_behavior: True
    image:''
    text:""
    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style: 'H5'
            font_name: "Comic"
